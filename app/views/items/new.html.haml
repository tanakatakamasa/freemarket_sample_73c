.in
  = render partial: "partials/header"
  .in__main
    = form_with url: "#" do  |f|
      .in__main__image
        .in__main__image__title 
          出品画像 
          %span.required 必須
        .in__main__image__text 最大5枚までアップロードできます
        = f.label :product_image do
          .in__main__image__file
            = f.file_field :product_image, class: "hide-file"
            .in__main__image__file__content
              %i.fa.fa-camera
              %p.image-text クリックしてファイルをアップロード
      .in__main__discription
        .in__main__discription__name
          商品名
          %span.required 必須
        = f.text_field :name, class: "in__main__discription__textForm", maxlength: 40, placeholder: "40文字まで"
        .in__main__discription__text
          商品の説明
          %span.required 必須
        = f.text_area :discription, class:  "in__main__discription__form", maxlength: 1000, placeholder: "商品の説明(必須 1,000文字以内)\n （色、素材、重さ、定価、注意点など）\n\n例） 2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。"
      .in__main__show
        .in__main__show__title
          商品の詳細
        .in__main__show__category
          カテゴリー 
          %span.required 必須
        = f.select :category_id, [["メンズ","メンズ"],["レディース","レディース"]],{prompt: "選択してください"},{ class: "in__main__show__categoryForm"}
        .in__main__show__condition
          商品の状態
          %span.required 必須
        = f.select :condition, [["新品、未使用","新品、未使用"],["未使用に近い","未使用に近い"]],{prompt: "選択してください"},{ class: "in__main__show__form"}
      .in__main__ship
        .in__main__ship__title
          配送について
        .in__main__ship__charge
          配送料の負担
          %span.required 必須
        = f.select :delivery_charge, [["送料込み(出品者負担)","送料込み"],["着払い","購入者負担"]],{prompt: "選択してください"},{ class: "in__main__ship__chargeForm"}
        .in__main__ship__region
          発送元の地域
          %span.required 必須
        = f.select :original_shipping_address, [["北海道","北海道"],["青森","青森"]],{prompt: "選択してください"},{ class: "in__main__ship__regionForm"}
        .in__main__ship__day
          発送までの日数
          %span.required 必須
        = f.select :duration, [["1~2日で発送","1~2日で発送"],["2~3日で発送","2~3日で発送"]],{prompt: "選択してください"},{ class: "in__main__ship__form"}
      .in__main__price
        .in__main__price__title
          価格（¥300〜9,999,999）
        .in__main__price__group
          .in__main__price__group__left
            販売価格
            %span.required 必須
          .in__main__price__group__right
            .in__main__price__group__right__icon ¥
            = f.number_field :price, min: 300, max: 9999999, class: "in__main__price__group__right__form", placeholder: "0"
        .in__main__price__group2
          .in__main__price__group2__feeTitle 販売手数料(10%) 
          .in__main__price__group2__fee ー
        .in__main__price__group
          .in__main__price__group__profitTitle 販売利益
          .in__main__price__group__profit ー
      .in__main__btn
        = f.submit "出品する", class: "in__main__btn__exhibit"
        = link_to "もどる", "root_path", class: "in__main__btn__back"
      .in__main__caution
        禁止されている
        = link_to "行為","https://www.mercari.com/jp/help_center/getting_started/prohibited_conduct/", class: "in__main__caution__link"
        および
        = link_to "出品物","https://www.mercari.com/jp/help_center/getting_started/prohibited_items/", class: "in__main__caution__link"
        を必ずご確認ください。
        = link_to "偽ブランド", "https://www.mercari.com/jp/help_center/getting_started/counterfeit_goods/", class: "in__main__caution__link"
        や
        = link_to "盗品物", "https://www.mercari.com/jp/help_center/getting_started/report_counterfeit_goods/", class: "in__main__caution__link"
        などの販売は犯罪であり、法律により処罰される可能性があります。また、出品をもちまして
        = link_to "加盟店規約", "https://www.mercari.com/jp/seller_terms/", class: "in__main__caution__link"
        に同意したことになります。

  = render partial: "items/partials/footer"